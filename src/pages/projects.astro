---
import { promise } from "astro:schema";
import BaseLayout from "../layouts/BaseLayout.astro";

const projects = [
  {
    name: "Natours",
    description:
      "A single page application created to showcase SASS usage. A beautiful page for any Natours travel agency",
    tech: ["HTML", "SASS", "JavaScript"],
    year: "2022",
    url: "https://sumeetsingh39.github.io/Natours/index.html",
    status: "stable",
  },
  {
    name: "Covid Tracker",
    description:
      "A simple Covid-19 tracker for the world. Map and Graph displaying data accordingly",
    tech: ["ReactJS", "Firebase"],
    year: "2020",
    url: "https://covid-19-tracker-f57fd.web.app/",
    status: "archived",
  },
  {
    name: "Terminal Contact",
    description:
      "A elegant page containg little about me and links in terminal style",
    tech: ["HTML", "SASS", "JavaScript", "WinboxJS"],
    year: "2019",
    url: "https://sumeetsingh39.github.io/Terminal_Contact/",
    status: "archived",
  },
];
---

<BaseLayout title="PROJECTS // SUMEET">
  <header class="mb-16 opacity-0 animate-[fadeIn_0.5s_ease-out_forwards]">
    <h1
      class="font-sans font-bold text-5xl md:text-8xl leading-[0.9] mb-8 text-signal tracking-tight"
    >
      ACTIVE /<br />
      <span class="text-muted">PROTOCOLS</span>
    </h1>
    <p class="text-muted max-w-2xl text-2xl font-sans leading-relaxed">
      Selected works and experiments. All systems operational.
    </p>
  </header>

  <section class="opacity-0 animate-[fadeIn_0.5s_ease-out_0.2s_forwards]">
    <div
      class="text-xs text-accent border-b border-border pb-2 mb-8 tracking-widest"
    >
      :: DEPLOYED_UNITS
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        projects.map((project) => {
          let statusClass = "bg-accent";
          if (project.status == "stable") {
            statusClass = "bg-green-500";
          } else if (project.status == "wip") {
            statusClass = "bg-yellow-600";
          } else if (project.status == "archived") {
            statusClass = "bg-gray-500";
          }
          return (
            <article class="group border border-border p-6 hover:border-accent transition-colors duration-300 flex flex-col h-full bg-void">
              <div class="flex justify-between item-start mb-6">
                <div class="flex items-center gap-2">
                  <span
                    class={`w-2 h-2 rounded-full animate-pulse ${statusClass}`}
                  />
                  <span class="text-xs text-muted font-mono">
                    {project.status.toLocaleUpperCase()} // {project.year}
                  </span>
                </div>
                <a
                  href={project.url}
                  target="_blank"
                  class="group text-muted hover:text-accent transition-colors"
                >
                  <svg
                    width="16"
                    height="12"
                    viewBox="0 0 16 12"
                    aria-hidden="true"
                    role="img"
                    xmlns="http://www.w3.org/2000/svg"
                    version="1.1"
                    xmlns:xlink="http://www.w3.org/1999/xlink"
                    class="-rotate-45 fill-current group-hover:fill-accent group-hover:animate-pulse"
                  >
                    <path
                      d="M11.0161 4.48205C9.73854 3.57477 9.02498 2.33033 8.8754 0.748717C8.86559 0.640824 8.91341 0.574618 9.01885 0.550096L11.3251 0.00572808C11.3526 -0.000786781 11.3812 -0.00175522 11.4091 0.00287837C11.437 0.00751197 11.4637 0.0176552 11.4877 0.0327175C11.5117 0.0477799 11.5324 0.0674597 11.5487 0.0906112C11.5649 0.113763 11.5765 0.139923 11.5825 0.167567C12.1747 2.67239 12.8883 4.28343 15.783 4.62918C15.9277 4.64634 16 4.72726 16 4.87194V6.72205C16.0003 6.84617 15.957 6.96645 15.8777 7.06191C15.7984 7.15737 15.6881 7.22194 15.566 7.24435C13.1212 7.70289 11.8044 9.18151 11.6156 11.6802C11.6058 11.8224 11.531 11.8776 11.3913 11.8457L9.01885 11.2793C8.88398 11.2474 8.82636 11.164 8.84598 11.0292C9.07402 9.53584 9.76797 8.30856 10.9278 7.34734C11.0872 7.21492 11.0639 7.14872 10.8579 7.14872L0.426667 7.15975C0.313508 7.15975 0.204983 7.1148 0.124968 7.03478C0.0449522 6.95477 0 6.84624 0 6.73308V4.95285C0 4.83515 0.0600765 4.77508 0.18023 4.77262L10.9425 4.7101C11.2025 4.7101 11.227 4.63408 11.0161 4.48205Z"
                      class="fill-current"
                    />
                  </svg>
                </a>
              </div>
              <h2 class="font-sans font-bold text-3xl text-signal mb-4 group-hover:translate-x-1 transition-transform">
                {project.name}
              </h2>
              <p class="text-muted mb-8 grow leading-relaxed font-sans text-xl">
                {project.description}
              </p>
              <div class="flex flex-wrap gap-2 mt-auto">
                {project.tech.map((t) => {
                  return (
                    <span class="text-xs font-mono border border-border px-2 py-1 text-muted group-hover:text-signal transition-colors">
                      [{t}]
                    </span>
                  );
                })}
              </div>
            </article>
          );
        })
      }
    </div>
  </section>
</BaseLayout>
